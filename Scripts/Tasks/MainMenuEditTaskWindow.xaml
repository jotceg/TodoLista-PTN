            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Zapisz" Width="80" Margin="5" Click="SaveTaskBtn_Click"/>
                <Button Content="Usuń" Width="80" Margin="5" Click="DeleteTaskBtn_Click"/>
                <Button Content="Wróć" Width="80" Margin="5" Click="CancelTaskBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
