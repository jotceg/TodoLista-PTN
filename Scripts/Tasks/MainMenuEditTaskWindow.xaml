<Window x:Class="TodoLista.Scripts.Tasks.MainMenuEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoLista.Scripts.Tasks"
        mc:Ignorable="d"
        Title="MainMenuEditTaskWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Edytuj Zadanie" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Priority:" VerticalAlignment="Center" Width="80"/>
                <ComboBox x:Name="PriorityComboBox" Width="200" SelectedIndex="0">
                    <ComboBoxItem Content="Low"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="High"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Title:" VerticalAlignment="Center" Width="80"/>
                <TextBox x:Name="TitleTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Description:" VerticalAlignment="Center" Width="80"/>
                <TextBox x:Name="DescriptionTextBox" Width="200" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Date:" VerticalAlignment="Center" Width="80"/>
                <DatePicker x:Name="DatePickerBtn" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Time:" VerticalAlignment="Center" Width="80"/>
                <ComboBox x:Name="TimeHourComboBox" Width="60">
                    <!-- Add hours here -->
                    <ComboBoxItem Content="00"/>
                    <ComboBoxItem Content="01"/>
