                    <ComboBoxItem>57</ComboBoxItem>
                    <ComboBoxItem>58</ComboBoxItem>
                    <ComboBoxItem>59</ComboBoxItem>
                    <!-- Add more minutes as needed -->
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <Button Content="Zapisz" Grid.Column="0" FontSize="20" FontFamily="Bahnschrift" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,10,10,10" Click="SaveTaskBtn_Click"/>
        <Button Content="Usuń" Grid.Column="1" FontSize="20" FontFamily="Bahnschrift" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,10,10,10" Click="DeleteTaskBtn_Click"/>
        <Button Content="Wróć" Grid.Column="2" FontSize="20" FontFamily="Bahnschrift" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,10,10,10" Click="CancelTaskBtn_Click"/>
    </Grid>
</Window>
