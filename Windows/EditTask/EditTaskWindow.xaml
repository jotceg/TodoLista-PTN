        <Button x:Name="AddTaskBtn" Content="Dodaj zadanie" HorizontalAlignment="Stretch" FontSize="20" FontFamily="Bahnschrift" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="AddTaskBtn_Click" Grid.Column="0"/>
        <Button x:Name="MarkAsCompletedTaskBtn" Content="Ukończ zadanie" FontSize="20" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="MarkAsCompletedTaskBtn_Click" Grid.Column="1"/>
        <DataGrid x:Name="DataBase" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,40" Grid.Column="2"/>
        <Button x:Name="DeleteAllTasksBtn" Content="Usuń wszystkie zadania" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" FontSize="20" Margin="10,0,10,10" VerticalAlignment="Bottom" Click="DeleteAllTaskBtn_Click" Grid.Column="2"/>
