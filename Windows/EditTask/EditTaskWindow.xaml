        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoLista.Scripts.Tasks"
        mc:Ignorable="d"
        Title="EditTaskWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="4" Opacity="0.8">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Aquamarine" Offset="0.0"/>
                    <GradientStop Color="Bisque" Offset="0.25"/>
                    <GradientStop Color="Coral" Offset="0.50"/>
                    <GradientStop Color="DarkGoldenrod" Offset="0.75"/>
                    <GradientStop Color="ForestGreen" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Label Content="Nazwa zadania*:" FontSize="25" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <TextBox  x:Name="TitleTextBox" FontSize="20" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Label Content="Opis:" FontSize="25" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <TextBox  x:Name="DescriptionTextBox" FontSize="20" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Margin="10,140,10,10" Grid.Column="0">
            <Label Content="Data realizacji*:" FontSize="20" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <DatePicker x:Name="DatePickerBtn" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            <Label Content="Godzina*:" FontSize="20" FontFamily="Bahnschrift" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
